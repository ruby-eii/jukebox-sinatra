<div class="row">
  <% if @queue.songs.empty? %>

    <p class="alert alert-warning">Ooops, it looks like you haven't added any songs to the Jukebox yet.</p>

  <% else %>

    <div class="queue-actions text-center">
      <button type="button" class="play-button btn btn-default" aria-label="Play">
        <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
      </button>

      <button type="button" class="stop-button btn btn-default" aria-label="Stop">
        <span class="glyphicon glyphicon-stop" aria-hidden="true"></span>
      </button>
    </div>

    <audio id="jukebox-player"></audio>

    <div class="row">
      <table class="songs table">
        <thead>
          <tr>
            <th>Title</th><th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @queue.songs.each do |song| %>
            <tr>
              <td><%= song.display_name %></td>
              <td>
                <a class="remove-song btn btn-default" data-song-id="<%=song.id%>" aria-label="Remove from queue">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Remove from queue
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <% end %>

  <a href="/songs" class="btn btn-primary">Back to songs list</a>
</div>
